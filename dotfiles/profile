export EDITOR=vim
export VISUAL=gvim

if grep -qE "(Microsoft|WSL)" /proc/version &> /dev/null ; then
  # We're in WSL
  export DOCKER_HOST=localhost:2375
fi

# if running bash
if [ -n "${BASH_VERSION}" ]; then
  if [ -f "${HOME}/.bashrc" ]; then
    source "${HOME}/.bashrc"
  fi
fi

if [ -d "${HOME}/bin" ]; then
  export PATH="${HOME}/bin:${PATH}"
fi
