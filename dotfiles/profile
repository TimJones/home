export EDITOR=vim
export VISUAL=gvim

# WSL workarounds
if grep -qE "(Microsoft|WSL)" /proc/version &> /dev/null ; then
  # Set correct umask
  # https://github.com/Microsoft/WSL/issues/352
  [[ "$(umask)" == "000" ]] && umask 022

  export DOCKER_HOST=localhost:2375
fi

# if running bash
if [ -n "${BASH_VERSION}" ]; then
  if [ -f "${HOME}/.bashrc" ]; then
    source "${HOME}/.bashrc"
  fi
fi

if [ -d "${HOME}/bin" ]; then
  export PATH="${HOME}/bin:${PATH}"
fi
