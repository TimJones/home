# For documentation, see /usr/share/dunst/dunstrc
# Colours are Solarized Dark, http://ethanschoonover.com/solarized
[global]
    font = "Hack 16"
    allow_markup = yes
    format = "<b>%s %p</b>\n%b"
    sort = yes
    indicate_hidden = yes
    alignment = center
    show_age_threshold = 60
    word_wrap = yes
    ignore_newline = no
    geometry = "300x5-30+30"
    shrink = no
    transparency = 0
    idle_threshold = 120
    monitor = 0
    follow = mouse
    sticky_history = yes
    history_length = 20
    show_indicators = yes
    separator_height = 2
    padding = 10
    horizontal_padding = 10
    separator_color = frame
    startup_notification = true
    dmenu = "/usr/bin/dmenu -p dunst"
    browser = "/usr/bin/chromium -new-tab"
    icon_position = off
    icon_folders = /usr/share/icons/gnome/16x16/status/:/usr/share/icons/gnome/16x16/devices/

[frame]
    width = 1
    color = "#073642"

[shortcuts]
    close = ctrl+space
    close_all = ctrl+shift+space
    history = ctrl+grave
    context = ctrl+shift+period

[urgency_low]
    background = "#002b36"
    foreground = "#586e75"
    timeout = 10

[urgency_normal]
    background = "#002b36"
    foreground = "#93a1a1"
    timeout = 10

[urgency_critical]
    background = "#002b36"
    foreground = "#dc322f"
    timeout = 0
